
#include<iostream>
#include<vector>
using namespace std;

void Selection_sort(vector<int>&v)  //We are passing the vector by reference so that any changes made can be reflected to the original vector
{
for(int i = 0;i<v.size() - 1;i++)
{
int min_idx = i;
for(int j = i + 1;j<v.size();j++)
{
if(v[j]<v[j + 1])
{
min_idx = j;
}
if(min_idx != i)
{
swap(v[i],v[min_idx])
}
}
}
}
}

void main()
{
int n;
cout<<"Enter the size of the vector: ";
cin>>n;

vector<int>v; //Initialising a vector
for(int i = 0;i<n;i++)
{
cin>>v[i];
}
Selection_sort(v);

cout<<"The sorted vector is: "<<endl;
for(int i = 0;i<n;i++)
{
cout<<v[i];
}
}
